extends base
include _reviewCard

mixin overview-box(label, text, icon)
    .overview-box__detail
        svg.overview-box__icon
            use(xlink:href= icon)
        span.overview-box__label= label
        span.overview-box__text= text

block content
    section.section-header
        .header__hero
            .header__hero-overlay &nbsp;
            img.header__hero-img(src=`/img/tours/${tour.imageCover}`, alt=`${tour.name}`)

        .heading-box
            h1.heading-primary
                span= tour.name
            .heading-box__group
                .heading-box__detail
                    svg.heading-box__icon
                        use(xlink:href='/img/icons.svg#icon-clock')
                    span.heading-box__text 10 days
                .heading-box__detail
                    svg.heading-box__icon
                        use(xlink:href='/img/icons.svg#icon-map-pin')
                    span.heading-box__text Las Vegas, USA

    section.section-description
        .overview-box
            div
                .overview-box__group
                    h2.heading-secondary.ma-bt-lg Quick facts

                    -let stateDate=tour.startDates[0].toLocaleString("en-us",{month:'long', year:'numeric'})
                    +overview-box('Next date', stateDate, '/img/icons.svg#icon-calendar')
                    +overview-box('Difficulty', tour.difficulty, '/img/icons.svg#icon-trending-up')
                    +overview-box('Participants', `${tour.maxGroupSize} people`, '/img/icons.svg#icon-user')
                    +overview-box('Rating', `${tour.ratingsAverage}/ 5`, '/img/icons.svg#icon-star')

                .overview-box__group
                    h2.heading-secondary.ma-bt-lg Your tour guides
                    each guide of tour.guides
                        .overview-box__detail
                            img.overview-box__img(src=`/img/users/${guide.photo}`, alt=guide.role)
                            - if(guide.role==='lead-guide')
                                span.overview-box__label Lead guide
                            - if(guide.role==='guide')
                                span.overview-box__label Guide
                            span.overview-box__text= guide.name

        .description-box
            h2.heading-secondary.ma-bt-lg= `About the ${tour.name} tour`
            -const paragraphs=tour.description.split('\n')
            each paragraph in paragraphs
                p.description__text= paragraph

    section.section-pictures
        each image, index in tour.images
            .picture-box
                img.picture-box__img(class=`picture-box__img--${index}` src=`/img/tours/${image}`, alt=`The Park Camper Tour ${index}`)

    section.section-map
        #map(data-locations=`${JSON.stringify(tour.locations)}`)
        //not now not now not now

    section.section-reviews
        .reviews
            each review in tour.reviews 
                +reviewCard(review)

    section.section-cta
        .cta
            .cta__img.cta__img--logo
                img(src='/img/logo-white.png', alt='Natours logo')
            img.cta__img.cta__img--1(src=`/img/tours/${tour.images[1]}`, alt='Tour image')
            img.cta__img.cta__img--2(src=`/img/tours/${tour.images[2]}`, alt='Tour image')
            .cta__content
                h2.heading-secondary What are you waiting for?
                p.cta__text=`${tour.duration} days. 1 adventure. Infinite memories. Make it yours today!`
                button.btn.btn--green.span-all-rows Book tour now!
    script(src="/js/mapbox.js")